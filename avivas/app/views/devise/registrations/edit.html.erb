<div class="title-container">
  <h1> Editar Perfil </h1>
</div>

<div class="form"> 
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :username, "Nombre de Usuario", class: "form-label" %>
      <%= f.text_field :username, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :telephone, "Telefono", class: "form-label" %>
      <%= f.text_field :telephone, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :role, "Rol", class: "form-label" %>
      <%= f.select :role, User.roles.keys.map { |role| [role.humanize, role] }, {}, { class: "form-select" } %>
    </div>

    <div class="form-group">
      <%= f.label :entered_at, class:"form-label" %>
      <%= f.date_field :entered_at, class:"form-input" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password, "Contraseña", class: "form-label" %> <i>(dejar vacio si no la queres cambiar)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
      <% if @minimum_password_length %>
        <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Repetir Contraseña", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :current_password, "Contraseña Actual", class: "form-label" %> <i>(ingresa tu contraseña para confirmar los cambios)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.submit "Actualizar Datos", class: "submit-button" %>
    </div>
  <% end %>

  <br>

  <div> 
    <span> Eliminar mi Cuenta </span>

    <div>  <%= button_to "Eliminar Cuenta", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

    <%= link_to "Volver", :back %>
  
  </div>

</div>

