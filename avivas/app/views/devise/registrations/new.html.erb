<div class="login-container">
  <div class="login-form"> 
    <h2 class="login-title"> Registrarse </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="login-form-group">
        <%= f.label :email, class: "login-form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-form-input" %>
      </div>

      <div class="login-form-group">
        <%= f.label :username, "Nombre de Usuario", class: "login-form-label" %>
        <%= f.text_field :username, class: "login-form-input" %>
      </div>

      <div class="login-form-group">
        <%= f.label :telephone, "Telefono", class: "login-form-label" %>
        <%= f.text_field :telephone, class: "login-form-input" %>
      </div>

      <div class="login-form-group">
        <%= f.label :role, "Rol", class: "login-form-label" %>
        <%= f.select :role, User.roles.keys.map { |role| [role.humanize, role] }, {}, { class: "login-form-select" } %>
      </div>

      <div class="login-form-group">
        <%= f.label :password, "Contraseña", class: "login-form-label" %>
        <% if @minimum_password_length %>
        <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "login-form-input" %>
      </div>

      <div class="login-form-group">
        <%= f.label :password_confirmation, "Repetir Contraseña", class: "login-form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "login-form-input" %>
      </div>

      <div class="login-form-group">
        <%= f.submit "Registrarse", class: "login-form-submit"  %>
      </div>
    <% end %>

    <div class="login-form-links">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
