<div class="title-container">
  <h1> Registrarse </h1>
</div>

<div class="form"> 
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :username, "Nombre de Usuario", class: "form-label" %>
        <%= f.text_field :username, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :telephone, "Telefono", class: "form-label" %>
        <%= f.text_field :telephone, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :entered_at, class:"form-label" %>
        <%= f.date_field :entered_at, class:"form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Contraseña", class: "form-label" %>
        <% if @minimum_password_length %>
        <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Repetir Contraseña", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.submit "Registrarse", class: "submit-button"  %>
      </div>
    <% end %>

    <div class="login-form-links">
      <%= render "devise/shared/links" %>
    </div>

</div>
