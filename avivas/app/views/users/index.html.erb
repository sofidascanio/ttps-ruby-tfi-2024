<% content_for :title, t('users') %>

<div class="title-container">
  <h1> Usuarios </h1>
  <%= link_to t('new') + ' ' + t('user'), new_user_path, class: "add-button" %>
</div>

<div class="table-container">
  <table>
    <thead>
        <tr>
          <th> Nombre de Usuario </th>
          <th> Email </th>
          <th> Rol </th>
          <th> Fecha de Ingreso </th>
          <th> Ver usuario </th>
        </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td> <%= user.username %> </td>
          <td> <%= user.email %> </td>
          <td> <%=  t("roles.#{user.role}") %> </td>
          <td> <%= user.entered_at %> </td>
          <td>
            <%= link_to user_path(user), class: "view-link" do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="30" viewBox="0 0 36 36">
                <circle cx="16.86" cy="9.73" r="6.46" fill="#c01c28"/>
                <path fill="#c01c28" d="M21 28h7v1.4h-7z"/>
                <path fill="#c01c28" d="M15 30v3a1 1 0 0 0 1 1h17a1 1 0 0 0 1-1V23a1 1 0 0 0-1-1h-7v-1.47a1 1 0 0 0-2 0V22h-2v-3.58a32 32 0 0 0-5.14-.42a26 26 0 0 0-11 2.39a3.28 3.28 0 0 0-1.88 3V30Zm17 2H17v-8h7v.42a1 1 0 0 0 2 0V24h6Z"/>
              </svg>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @users %>

