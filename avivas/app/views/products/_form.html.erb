<%= form_with(model: product, class: "form") do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> impidieron guardar el producto:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div class="form-group">
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div class="form-group">
    <%= form.label :stock, style: "display: block" %>
    <%= form.number_field :stock %>
  </div>

  <div class="form-group">
  <%= form.label :color, "Seleccionar color:", style: "display: block" %>
  <%= form.color_field :color %>
</div>

<div class="form-group"> 
  <%= form.label :category_ids, "Selecciona las categorías", style: "display: block" %>
  <%= form.collection_select :category_ids, Category.all, :id, :name, { multiple: true } %>

</div>

   <div class="form-group">
    <%= form.label :images, "Images" %>
    <%= form.file_field :images, multiple: true %>
  </div>

   <% if @product.persisted? %>
    <h3>Imágenes actuales</h3>
    <% if @product.images.attached? %>
      <% @product.images.each_with_index do |image, index| %>
        <div>
          <%= image_tag image, style: "width: 300px; height: 300px;" %>
          <%= check_box_tag "product[images_to_remove][]", index, false %>
          <%= label_tag "product_images_to_remove_#{index}", "Eliminar" %>
        </div>
      <% end %>
    <% else %>
      <p>No hay imágenes cargadas.</p>
    <% end %>
  <% end %>

   <div class="form-actions">
     <%= form.submit class: "submit-button"  %>
  </div>
<% end %>
