<div id="<%= dom_id product %>">
  <p>
    <strong>Nombre:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Descripción:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Precio Unitario:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Stock Disponible:</strong>
    <%= product.stock %>
  </p>

  <div>
  <p>
    Color: 
    <span style="display: inline-block; width: 1em; height: 1em; background-color: <%= product.color %>; margin-right: 0.5em; border: 1px solid #000;"></span>
  </p>
</div>

  <h3>Categorías:</h3>
  <ul>
    <% product.categories.each do |category| %>
      <li>
      <%= category.name %>
      <%= link_to t('show') + ' ' + t('category'), category, class: "link-button"  %>
      </li>
    <% end %>
  </ul>

<% product.images.each do |image| %>
  <%= image_tag image,  style: "width: 300px; height: 300px;" %>
<% end %>

</div>
