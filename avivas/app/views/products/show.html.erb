<%= render @product %>

<div>
  <% if user_signed_in? %>
    <%= link_to t('edit') + ' ' + t('product'), edit_product_path(@product), class: "link-button"  %>
    <%= button_to t('delete') + ' ' + t('product'), @product, method: :delete, class: "link-button"  %>
  <% end %>
  <%= link_to t('back_to') + ' ' + t('products'), products_path, class: "link-button"  %>
  <%= link_to "Volver", :back, class: "link-button" %>
</div>