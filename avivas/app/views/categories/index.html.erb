<% content_for :title, t('categories') %>

<div class="title-container">
  <h1> Categor√≠as </h1>
  <% if user_signed_in? %>
    <%= link_to t('new_sale') + ' ' + t('category'), new_category_path, class: "add-button" %>
  <% end %>
</div>

<div class="categories-grid">
